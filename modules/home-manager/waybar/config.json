[
  {
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "margin": 0,
    "modules-left": [
      "custom/power",
      "hyprland/workspaces",
      "sway/workspaces",
      "mpris#player",
      "mpris#prev",
      "mpris#status",
      "mpris#next",
    ],
    "modules-center": [
      "hyprland/window",
      "sway/window"
    ],
    "modules-right": [
      "tray",
      "network",
      "pulseaudio",
      "cpu",
      "memory",
      "clock",
    ],
    "custom/power": {
        "format": "󱄅",
        "justify": "center",
        "on-click": "powermenu",
        "tooltip": false
    },
    "hyprland/workspaces": {
        "on-click": "activate",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "on-scroll-up": "hyprctl dispatch workspace e+1"
    },
    "hyprland/window": {
        "icon": true,
        "icon-size": 12,
    },
    "sway/window": {
        "tooltip": false,
        "icon": true,
        "icon-size": 12,
    },
    "mpris#player": {
        "format": "{player_icon}",
        "interval": 1,
        "justify": "center",
        "player-icons": {
            "firefox": "󰈹",
            "spotify": ""
        },
        "tooltip-format": "{dynamic}"
    },
    "mpris#prev": {
      "format": "󰒮",
      "interval": 1,
      "justify": "center",
      "on-click": "playerctl previous",
      "tooltip": false
    },
    "mpris#status": {
      "format": "{status_icon}",
      "interval": 1,
      "justify": "center",
      "on-click": "playerctl play-pause",
      "status-icons": {
        "paused": "",
        "playing": ""
      },
      "tooltip": false
    },
    "mpris#next": {
      "format": "󰒭",
      "interval": 1,
      "justify": "center",
      "on-click": "playerctl next",
      "tooltip": false
    },
    "network": {
      "format-ethernet": "󰈀 {bandwidthTotalBytes}",
      "format-wifi": "󰖩 {signalStrength}%",
      "interval": 1,
      "justify": "center",
      "tooltip-format": "{essid}",
      "tooltip-format-disconnected": ""
    },
    "pulseaudio": {
      "format": "{icon} {volume}%",
      "format-icons": {
        "default": [
          "",
          "",
          ""
        ],
        "headphone": "󰋋"
      },
      "format-muted": "󰝟 muted",
      "justify": "center",
      "on-click": "changevolume mute",
      "on-scroll-down": "changevolume down 5",
      "on-scroll-up": "changevolume up 5",
      "tooltip": false
    },
    "cpu": {
        "format": " {usage}%",
        "interval": 1,
        "justify": "center",
        "tooltip": false
    },
    "memory": {
      "format": " {}%",
      "interval": 1,
      "justify": "center"
    },
    "clock": {
      "format": "{:%A, %B %d, %Y (%r)}",
      "interval": 1,
      "justify": "center",
      "tooltip": false,
    },
    "tray": {
      "icon-size": 12,
      "justify": "center",
      "spacing": 5
    }
  }
]
